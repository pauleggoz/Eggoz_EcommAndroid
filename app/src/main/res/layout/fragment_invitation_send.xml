<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.referAndEarn.view.InvitationSendFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_back"
            android:layout_width="@dimen/s40"
            android:layout_height="@dimen/s40"
            android:layout_marginStart="@dimen/s16"
            android:layout_marginTop="@dimen/s16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/ddarkgrey" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="@dimen/s12"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            android:layout_marginTop="@dimen/s36"
            android:layout_marginStart="@dimen/s32"
            android:layout_marginEnd="@dimen/s32"
            app:cardBackgroundColor="@color/app_color">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_invitation_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/s45"
                    android:text="@string/invitation_send"
                    style="@style/texts32"/>
                <ImageView
                    android:id="@+id/img_referfriendconceptyourownbenefit"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/s54"
                    android:src="@drawable/referfriendconceptyourownbenefit"
                    app:layout_constraintTop_toBottomOf="@+id/txt_invitation_send"/>
                <TextView
                    android:id="@+id/txt_thank_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_referfriendconceptyourownbenefit"
                    android:layout_marginTop="@dimen/s54"
                    android:text="@string/thank_you"
                    style="@style/texts32"/>
                <TextView
                    android:id="@+id/txt_your_friend_receives_the_invitation_soon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/txt_thank_you"
                    android:layout_marginTop="@dimen/s32"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/s54"
                    android:text="@string/your_friend_receives_the_invitation_soon"
                    style="@style/text20"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>