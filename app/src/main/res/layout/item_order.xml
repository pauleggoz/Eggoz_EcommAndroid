<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="com.eggoz.ecommerce.utils.CustomBindingUtils" />

        <variable
            name="itemData"
            type="com.eggoz.ecommerce.network.model.OrderModel" />

        <variable
            name="itemTitle"
            type="String" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/s12">


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/s18"
                android:fontFamily="@font/spartansemibold"
                android:text="@{itemTitle}"
                android:textColor="@color/black"
                android:textSize="@dimen/s14"
                app:layout_constraintEnd_toStartOf="@+id/txt_status"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spartanregular"
                android:text="@{itemData.orderstatus}"
                android:textColor="@color/black"
                android:textSize="@dimen/s12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spartanregular"
                android:maxWidth="144dp"
                android:textColor="@color/black"
                android:textSize="@dimen/s12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                bind:orderItemPrice="@{itemData.orderitem.price}"
                bind:orderItemQnt="@{itemData.orderitem.quantity ?? 0}" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spartanregular"
                android:maxWidth="144dp"
                android:textColor="@color/black"
                android:textSize="@dimen/s12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_price"
                bind:setDate="@{itemData.orderdate}" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>