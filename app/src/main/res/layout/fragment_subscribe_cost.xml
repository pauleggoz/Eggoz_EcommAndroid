<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.subscribe.SubscribeCostFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/s150"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_back"
                android:layout_width="@dimen/s40"
                android:layout_height="@dimen/s40"
                android:layout_marginStart="@dimen/s16"
                android:layout_marginTop="@dimen/s16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:layout_width="@dimen/s24"
                    android:layout_height="@dimen/s24"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/img_top"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/s48"
                android:layout_marginTop="@dimen/s28"
                android:contentDescription="@string/app_name"
                android:src="@drawable/applogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/txt_title"
                style="@style/textLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s16"
                android:fontFamily="@font/spartanbold"
                android:text="Subscribed Product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_top" />

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="@dimen/s0"
                android:layout_height="@dimen/s70"
                android:layout_marginStart="@dimen/s16"
                android:layout_marginTop="@dimen/s4"
                android:src="@drawable/applogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintWidth_percent="0.3" />
            <TextView
                android:id="@+id/txt_itemtext"
                style="@style/textsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s8"
                android:fontFamily="@font/spartansemibold"
                android:text="@string/na"
                app:layout_constraintStart_toEndOf="@+id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/txt_title" />
            <TextView
                android:id="@+id/txt_itembox"
                style="@style/textsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s8"
                android:fontFamily="@font/spartansemibold"
                android:text="@string/na"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/txt_itemtext"
                app:layout_constraintBottom_toTopOf="@+id/txt_itemdisprice" />

            <TextView
                android:id="@+id/txt_itemdisprice"
                style="@style/textsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s8"
                android:fontFamily="@font/spartansemibold"
                android:text="@string/na"
                app:layout_constraintStart_toEndOf="@+id/img_item"
                app:layout_constraintBottom_toBottomOf="@+id/img_item" />
            <TextView
                android:id="@+id/txt_itemprice"
                style="@style/textsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s8"
                android:fontFamily="@font/spartansemibold"
                android:text="@string/na"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/txt_itemdisprice"
                app:layout_constraintBottom_toBottomOf="@+id/img_item" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/s12"
                android:paddingStart="@dimen/s16"
                android:paddingEnd="@dimen/s16"
                app:layout_constraintTop_toBottomOf="@+id/img_item">


                <TextView
                    android:id="@+id/txt_Plan_title"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/plan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/txt_Plan"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/na"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_frequency_title"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/frequency_of_delivery"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_Plan_title"/>
                <TextView
                    android:id="@+id/txt_frequency"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/na"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_Plan_title"/>
                <TextView
                    android:id="@+id/txt_deliveries_title"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/total_deliveries"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_frequency"/>
                <TextView
                    android:id="@+id/txt_deliveries"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/na"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_frequency"/>

                <TextView
                    android:id="@+id/txt_TotalAmount_title"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/total_amount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_deliveries_title"/>
                <TextView
                    android:id="@+id/txt_TotalAmount"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/na"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_deliveries_title"/>

                <TextView
                    android:id="@+id/txt_total_savings_title"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/total_savings"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_TotalAmount_title"/>
                <TextView
                    android:id="@+id/txt_total_savings"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/na"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_TotalAmount_title"/>

                <TextView
                    android:id="@+id/txt_offer_price_title"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/offer_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_total_savings_title"/>
                <TextView
                    android:id="@+id/txt_offer_price"
                    style="@style/textsmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s8"
                    android:fontFamily="@font/spartansemibold"
                    android:text="@string/na"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_total_savings_title"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_TotalPrice"
                style="@style/textsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s8"
                android:layout_marginTop="@dimen/s16"
                android:fontFamily="@font/spartansemibold"
                android:text="@string/total_order_amount"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/ly_order_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>