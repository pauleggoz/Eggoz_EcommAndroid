<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.starter.StarterFragment">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/s150"
            android:src="@drawable/background"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/s48"
            android:layout_marginTop="@dimen/s48"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/logo1"
            android:contentDescription="@string/app_name"
            />

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.75"
            android:layout_marginTop="@dimen/s48"
            app:layout_constraintTop_toBottomOf="@+id/img_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/starter"
            android:contentDescription="@string/app_name"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_heading"
            android:layout_marginTop="@dimen/s24"
            android:gravity="center"
            android:paddingLeft="@dimen/s54"
            android:paddingRight="@dimen/s54"
            style="@style/textxlarge"
            app:layout_constraintTop_toBottomOf="@+id/img_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/txt_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_des"
            android:gravity="center"
            android:layout_marginTop="@dimen/s24"
            android:paddingRight="@dimen/s76"
            android:paddingLeft="@dimen/s76"
            style="@style/textLargemedium"
            android:textColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/s56"
            android:layout_marginTop="@dimen/s72"
            android:layout_marginEnd="@dimen/s56"
            android:layout_marginBottom="@dimen/s60"
            android:background="@drawable/curvedback"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            app:cardElevation="@dimen/s0"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_des">

            <TextView
                android:id="@+id/txt_btn"
                style="@style/textLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="@string/Get_Started"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
